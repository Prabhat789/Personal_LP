<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingBottom="5dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.mobisys.recipe.widgets.CustomTextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Publish Post"
                android:textSize="@dimen/medium_text"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true"
                    android:id="@+id/audianceGroup"
                    android:gravity="center"
                    android:weightSum="1">
                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="  Public"
                        android:button="@drawable/checkbox_available_status"
                        android:textColor="@color/black"
                        android:elevation="5dp"
                        android:layout_weight="0.33"/>
                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="  Private"
                        android:button="@drawable/checkbox_available_status"
                        android:textColor="@color/black"
                        android:elevation="5dp"
                        android:layout_weight="0.33"/>
                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="  Friends"
                        android:textColor="@color/black"
                        android:elevation="5dp"
                        android:button="@drawable/checkbox_available_status"
                        android:layout_weight="0.33"/>
                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.6dp"
                    android:background="@color/smoke_white"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/seperateLine"
                    android:layout_below="@+id/audianceGroup"
                    android:layout_marginRight="15dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@+id/seperateLine"
                    android:layout_marginTop="10dp"
                    android:id="@+id/mainContent"
                    android:layout_marginRight="15dp"
                    android:weightSum="1">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.20">
                        <com.mobisys.recipe.util.CircularImage
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:elevation="5dp"
                            android:id="@+id/profileImageView"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.80">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/small_text"
                            android:textColor="@color/black"
                            android:textColorHint="@color/smoke_white"
                            android:hint="Status"
                            android:gravity="start"
                            android:id="@+id/editStatus"
                            android:background="@drawable/edit_trans_square_smoke_white"
                            android:padding="10dp"/>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/mainContent"
                    android:gravity="bottom"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="15dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1"
                        android:gravity="center_vertical">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:orientation="horizontal"
                            android:layout_weight="0.50">
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_camera_grey"
                                android:padding="5dp"
                                android:elevation="5dp"
                                android:id="@+id/imgCamera"
                                android:background="@android:color/transparent"/>
                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_gallery_grey"
                                android:padding="5dp"
                                android:elevation="5dp"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/imgGallery"
                                android:background="@android:color/transparent"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:layout_weight="0.50">
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_gravity="right"
                                android:layout_marginRight="5dp"
                                android:id="@+id/dialogImageContainer"
                                android:scaleType="centerCrop"/>

                        </LinearLayout>


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/smoke_white"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="1">
                        <com.mobisys.recipe.widgets.CustomButton
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="0.50"
                            android:text="Cancel"
                            android:id="@+id/btnCancelDialog"
                            android:textSize="@dimen/small_text"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:layout_marginLeft="5dp"
                            android:elevation="5dp"
                            android:background="@drawable/btn_rounded_corner_parse_green"/>
                        <com.mobisys.recipe.widgets.CustomButton
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_weight="0.50"
                            android:text="Submit"
                            android:layout_marginLeft="5dp"
                            android:textSize="@dimen/small_text"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:elevation="5dp"
                            android:id="@+id/btnSaveDialog"
                            android:background="@drawable/btn_rounded_corner_parse_green"/>
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>
