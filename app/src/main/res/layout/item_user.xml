<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:elevation="5dp"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:gravity="center_vertical|left"
            android:orientation="vertical">

            <com.mobisys.aspr.util.CircularImage
                android:id="@+id/imgUser"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="8dp"
                android:elevation="4dp"
                android:scaleType="centerCrop"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.60"
            android:gravity="center_vertical|left"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="5dp"
                android:maxLength="35"
                android:singleLine="true"
                android:text="Prabhat Tiwari"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text" />
            <TextView
                android:id="@+id/txtLocation"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:drawableLeft="@drawable/ic_marker_red"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="Prabhat Tiwari"
                android:textColor="@color/smoke_white"
                android:textSize="13sp"
                android:textStyle="italic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.20"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <com.mobisys.aspr.widgets.CustomButton
                android:id="@+id/btnRequestStatus"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/btn_rounded_corner_green_small"
                android:elevation="3dp"
                android:text="Send Request"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="8sp" />
        </LinearLayout>
       <!-- <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.15"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_height="match_parent">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:button="@drawable/checkbox_available_status"
                android:id="@+id/checkBox4" />
        </LinearLayout>-->
    </LinearLayout>
</android.support.v7.widget.CardView>