            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgPostDialog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:adjustViewBounds="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/llBottomDialog"
                    android:background="@color/trans_black"
                    android:layout_gravity="center_horizontal|bottom"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@color/white"/>

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="45 Likes"
                        android:textColor="@color/white"
                        android:button="@drawable/check_detail_like"
                        android:id="@+id/checkBox2"
                        android:layout_marginLeft="15dp"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/very_small"
                        android:padding="5dp"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:foregroundGravity="top"
                    android:orientation="vertical"
                    android:id="@+id/llTopDialog"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_horizontal|top">

                    <com.mobisys.recipe.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="Prabhat Tiwari"
                        android:id="@+id/txtUserNameDetailDialog"
                        android:textSize="@dimen/medium_text"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@color/white"/>
                    <com.mobisys.recipe.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dummy_text"
                        android:maxLines="5"
                        android:padding="10dp"
                        android:background="@color/trans_black"
                        android:id="@+id/txtDescriptionDetailDialog"
                        android:textSize="@dimen/small_text"
                        android:textColor="@color/white"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        />


                </LinearLayout>


            </FrameLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>
