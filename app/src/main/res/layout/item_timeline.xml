<?xml version="1.0" encoding="utf-8"?>
<!-- xmlns:app="http://schemas.android.com/apk/res-auto"-->
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:elevation="5dp"
        android:clickable="true"
        android:focusable="true"
        card_view:cardCornerRadius="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <com.mobisys.recipe.util.CircularImage
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:scaleType="centerCrop"
                android:id="@+id/imgUser"
                android:elevation="4dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">
                <com.mobisys.recipe.widgets.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:id="@+id/txtUsername"
                    android:textColor="@color/black"
                    android:text=""/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <com.mobisys.recipe.widgets.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textSize="@dimen/very_small"
                        android:id="@+id/txt"
                        android:textColor="@color/smoke_white"
                        android:text="@string/share_with"/>

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="8dp"
                        android:id="@+id/audianceIcon"/>
                </LinearLayout>

                <com.mobisys.recipe.widgets.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:textSize="16dp"
                    android:elevation="1dp"
                    android:text="@string/dummy_text"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/smoke_white"
                    android:id="@+id/txtTimeline"/>
            </LinearLayout>


        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:elevation="5dp"
            android:adjustViewBounds="true"
            android:id="@+id/imgPost"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <com.mobisys.recipe.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_comment"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textAllCaps="false"
                android:text=" 20"
                android:gravity="center_vertical|left"
                android:textSize="@dimen/very_small"
                android:id="@+id/btnComments"
                android:textColor="@color/smoke_white"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/checkBox2"
                android:layout_toEndOf="@+id/checkBox2" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=""
                android:button="@drawable/check_like"
                android:id="@+id/checkBox2"
                android:layout_centerVertical="true"
                android:textColor="@color/smoke_white"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:layout_alignParentStart="true" />

            <com.mobisys.recipe.widgets.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12-03-2016"
                android:id="@+id/dateText"
                android:padding="5dp"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/very_very_small"
                android:textColor="@color/smoke_white"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

    </LinearLayout>


    </android.support.v7.widget.CardView>
