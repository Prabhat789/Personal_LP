<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:gravity="center">
            <com.mobisys.recipe.util.CircularImage
                android:id="@+id/ivProfileLeft"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.60"
            android:layout_marginTop="7dp"
            android:id="@+id/llText">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtBody"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:elevation="3dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:background="@drawable/btn_rounded_corner_white"
                android:text="Prabhta kjhfjdsnfkljkldhfjdshfwehjflksl;kfl sdjhfjkhgkljfdgl;dkg;ljdgklhsdkv skjhgjfkjglkdfklsnfjkgdfjhrkg mghjkfhgokfjglfmlnjshdfsd"
                android:textSize="16sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.20"
            android:gravity="center">
            <com.mobisys.recipe.util.CircularImage
                android:id="@+id/ivProfileRight"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>